<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permitir al usuario acceder a internet para la API -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--Permite al usuario acceder a la galería de imágenes -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- Permitir al usuario acceder a la cámara para la API -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lectia"
        tools:targetApi="31">
        <activity
            android:name=".MisClubesActivity"
            android:exported="false" />
        <activity
            android:name=".DetallesClubActivity"
            android:exported="false" />
        <activity
            android:name=".DetallesLibro"
            android:exported="false" />
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:theme="@style/Theme.Lectia" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ItemsLibrosActivity"
            android:exported="false" />
        <activity
            android:name=".ListlibrosActivity"
            android:exported="false" />
        <activity
            android:name=".ClubesActivity"
            android:exported="false" />
        <activity
            android:name=".CrearClubActivity"
            android:exported="false" />
        <activity
            android:name=".LogActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>