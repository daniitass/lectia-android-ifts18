<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/textAutorComentario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        tools:text="Nombre del Autor" />

    <TextView
        android:id="@+id/textContenidoComentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="?attr/textAppearanceBody2"
        tools:text="Este es el contenido del comentario. Puede ser un poco largo y ocupar varias lÃ­neas." />

    <!-- ImageView para la imagen adjunta -->
    <ImageView
        android:id="@+id/imagenComentarioAdjunta"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone" 
        tools:visibility="visible"
        tools:src="@drawable/club_default"/>

</LinearLayout>